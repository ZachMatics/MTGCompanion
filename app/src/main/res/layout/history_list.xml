<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/topScore"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:paddingEnd="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/topCount"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/topScore"
        android:gravity="center"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:text="Top Poison"
        android:textColor="#C8DDA9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bottomScore"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/topCount"
        android:gravity="center"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:text="Bottom Score"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bottomCount"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/bottomScore"
        android:gravity="center"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:text="Bottom Poison"
        android:textColor="#C8DDA9"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>